{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'customer_review4.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'customer_review4.admin.config.sub_title'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}
    <form role="form" method="post">

        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>設定</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3"><span>{{ 'customer_review4.admin.config.grant_point'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.grant_point) }}
                                    {{ form_errors(form.grant_point) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'customer_review4.admin.config.grant_point_purchase'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.grant_point_purchase) }}
                                    {{ form_errors(form.grant_point_purchase) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'customer_review4.admin.config.login_only'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.login_only) }}
                                    {{ form_errors(form.login_only) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'customer_review4.admin.config.default_reviewer_name'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.default_reviewer_name) }}
                                    {{ form_errors(form.default_reviewer_name) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'customer_review4.admin.config.detail_in_review'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.detail_in_review) }}
                                    {{ form_errors(form.detail_in_review) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'customer_review4.admin.config.purchase_mark'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.purchase_mark) }}
                                    {{ form_errors(form.purchase_mark) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'customer_review4.admin.config.review_max'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.review_max) }}
                                    {{ form_errors(form.review_max) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink"
                               href="{{ url('admin_store_plugin') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'customer_review4.admin.config.back'|trans }}</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{ 'admin.common.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
