{% block stylesheet %}
    <style>
        .slick-slider {
            margin-bottom: 30px;
        }

        .slick-dots {
            position: absolute;
            bottom: -45px;
            display: block;
            width: 100%;
            padding: 0;
            list-style: none;
            text-align: center;
        }

        .slick-dots li {
            position: relative;
            display: inline-block;
            width: 20px;
            height: 20px;
            margin: 0 5px;
            padding: 0;

            cursor: pointer;
        }

        .slick-dots li button {
            font-size: 0;
            line-height: 0;
            display: block;
            width: 20px;
            height: 20px;
            padding: 5px;
            cursor: pointer;
            color: transparent;
            border: 0;
            outline: none;
            background: transparent;
        }

        .slick-dots li button:hover,
        .slick-dots li button:focus {
            outline: none;
        }

        .slick-dots li button:hover:before,
        .slick-dots li button:focus:before {
            opacity: 1;
        }

        .slick-dots li button:before {
            content: " ";
            line-height: 20px;
            position: absolute;
            top: 0;
            left: 0;
            width: 12px;
            height: 12px;
            text-align: center;
            opacity: .25;
            background-color: black;
            border-radius: 50%;

        }

        .slick-dots li.slick-active button:before {
            opacity: .75;
            background-color: black;
        }

        .slick-dots li button.thumbnail img {
            width: 0;
            height: 0;
        }

        .slick-slider img {
            width: 100%;
            max-width: 860px;
            margin: auto;
        }

        /** 
        @media only screen and (min-width: 768px) {
            .slick-slider img {
                height: 450px;
                margin: auto;
                object-fit: cover;
            }
        }

        @media only screen and (max-width: 767px) {
            .slick-slider img {
                width: 100%;
                height: 300px;
                object-fit: cover;
            }
        }

        @media only screen and (max-width: 450px) {
            .slick-slider img {
                height: 220px;
            }
        }*/
    </style>
{% endblock %}

{% block javascript %}
    <script>
        $(function() {
            $('.main_visual').slick({
                dots: true,
                arrows: false,
                autoplay: true,
                speed: 300
            });
        });
    </script>
{% endblock javascript %}

{% block main %}
    <div class="ec-sliderRole">
        <div class="main_visual">
            {% for TopBanner in TopBanners %}
                {% set Blog = TopBanner.Product %}
                <div class="item slick-slide">
                    <a href="{{ url('product_detail', {'id': Blog.id}) }}">
                        <img src="{{ asset(blog_image(Blog, 'middle'), "save_image") }}" alt="{{ Blog.name }}" loading="lazy">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}